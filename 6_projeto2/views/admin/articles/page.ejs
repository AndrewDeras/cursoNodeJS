<%-include('../../partials/header.ejs')%>
<body>
  <%-include('../../partials/homenavbar.ejs')%>
  <div class="container">
    <hr />
    <% result.articles.rows.forEach(({id, title, slug, body})=>{ %>
    <div class="card">
      <div class="card-header"><%=title%></div>
      <div class="card-body">
        <a href="/<%=slug%>" class="btn btn-success">Ler artigo</a>
      </div>
    </div>
    <br />
    <% }) %>
    <div class="row pb-5">
      <div class="col col-12 d-flex justify-content-between">
        <% if (result.page === 1) { %>
          <a href="/"> Home </a>
        <% } else{ %>
          <a href="/articles/page/<%=result.page - 1%>"> <<< Prev </a>
        <% } %> 
        
        <% if(result.next) { %>
          <a href="/articles/page/<%=result.page + 1%>">Next >>></a>
        <%}%>
      </div>
    </div>
  </div>
</body>
<%-include('../../partials/footer.ejs')%>
